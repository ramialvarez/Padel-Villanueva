---
import Sidebar from "@/components/admin/Sidebar.astro";
import Layout from "@/layouts/Layout.astro";

const { title } = Astro.props;
---

<Layout title={title}>
  <div class="flex h-screen">
    <Sidebar />
    <div
      class="flex-1 ml-16 md:ml-64 p-2 overflow-y-auto overflow-x-auto lg:overflow-y-hidden xl:overflow-x-hidden bg-light-white"
    >
      <slot />
    </div>
  </div>
</Layout>
